package Codes;



public class sorting  {
	

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int arr[]= {2,3,5,2,9,7,1};
		int sum=0;
		int maxSum=0;
		for (int i = 0; i <= arr.length-3; i++) {
			for(int j=i;j<i+3;j++) {
				sum+=arr[j];
				
			}
//			System.out.println(sum);
			if(sum>=maxSum) {
				maxSum=sum;
			}
			sum=0;
			
			
		}
		System.out.println(maxSum);
		
	}

}
